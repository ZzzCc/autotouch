<?xml version="1.0" encoding="utf-8"?>
<com.hdf.autotouch.widget.WindowInsetConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/win_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_recommend_bg"
    tools:context=".ui.recommend.RecommendActivity">

    <include layout="@layout/include_top_bar" />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_20"
        android:background="@drawable/icon_share"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_recommend_bg1"
        app:layout_constraintDimensionRatio="941:212"
        app:layout_constraintBottom_toTopOf="@+id/img_red_packet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/img_red_packet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_red_packet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1029:1098"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <TextView
        android:id="@+id/tv_Invitation_code1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_64"
        android:text="@string/Invitation_code"
        android:textColor="@color/light_black3"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_red_packet" />

    <TextView
        android:id="@+id/tv_Invitation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:textColor="@color/app_color"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Invitation_code1" />

    <TextView
        android:id="@+id/tv_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/icon_copy_bg"
        android:gravity="center"
        android:text="@string/click_copy"
        android:textColor="@color/color_9B3F3E"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Invitation_code" />


    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/bg_red_solid5"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_red_packet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_copy" />

    <TextView
        android:id="@+id/tv_scan_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:text="@string/scan_qr_code"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_qr_code" />


</com.hdf.autotouch.widget.WindowInsetConstraintLayout>