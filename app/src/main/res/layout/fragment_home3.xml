<?xml version="1.0" encoding="utf-8"?>
<com.hdf.autotouch.widget.WindowInsetConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.Home3Fragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/icon_info_card"
                app:layout_constraintDimensionRatio="1125:660"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_height"
                android:gravity="center"
                android:text="@string/tab_text3"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_customer_service"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/size_16"
                android:scaleType="centerInside"
                android:src="@drawable/icon_kefu"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title" />


            <ImageView
                android:id="@+id/img_launcher"
                android:layout_width="@dimen/size_56"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/size_20"
                android:src="@drawable/ic_icon"
                app:layout_constraintBottom_toBottomOf="@+id/view_card"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="@+id/view_card"
                app:layout_constraintTop_toTopOf="@+id/view_card" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/font_16"
                app:layout_constraintLeft_toRightOf="@+id/img_launcher"
                app:layout_constraintTop_toTopOf="@+id/img_launcher"
                tools:text="123456789" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_24"
                android:text="@string/mine_login"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/img_launcher"
                app:layout_constraintLeft_toRightOf="@+id/img_launcher"
                app:layout_constraintTop_toTopOf="@+id/img_launcher" />

            <TextView
                android:id="@+id/tv_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_8"
                android:background="@drawable/bg_identity"
                android:gravity="center"
                android:padding="@dimen/size_2"
                android:textColor="@color/color_ADDEF8"
                android:textSize="@dimen/font_14"
                app:layout_constraintBottom_toBottomOf="@+id/img_launcher"
                app:layout_constraintLeft_toRightOf="@id/img_launcher"
                app:layout_constraintTop_toBottomOf="@+id/tv_id"
                tools:text="城市节点" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginBottom="@dimen/size_12"
                android:textColor="@color/color_AEB4D0"
                android:textSize="@dimen/font_12"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/view_card"
                app:layout_constraintLeft_toLeftOf="@+id/view_card"
                tools:text="@string/registration_date" />

            <ImageView
                android:id="@+id/iv_recommend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginRight="@dimen/size_24"
                android:background="@drawable/bg_recommend"
                app:layout_constraintBottom_toBottomOf="@+id/view_card"
                app:layout_constraintLeft_toLeftOf="@+id/view_card"
                app:layout_constraintRight_toRightOf="@+id/view_card" />

            <View
                android:id="@+id/view_bg1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/size_12"
                android:background="@drawable/bg_solid_white_4"
                app:layout_constraintBottom_toBottomOf="@+id/tv_mine_serve"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_card" />

            <TextView
                android:id="@+id/tv_mine_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_wallet"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/my_assets"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toTopOf="@+id/view_bg1" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg1"
                app:layout_constraintRight_toRightOf="@+id/view_bg1"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_asset" />

            <TextView
                android:id="@+id/tv_mine_order_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_order_form"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/my_order"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_asset" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg1"
                app:layout_constraintRight_toRightOf="@+id/view_bg1"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_order_form" />

            <TextView
                android:id="@+id/tv_mine_mac_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mac_address"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/ant_mac_address"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_order_form" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg1"
                app:layout_constraintRight_toRightOf="@+id/view_bg1"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_mac_address" />

            <TextView
                android:id="@+id/tv_mine_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_bill"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/bill"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_mac_address" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg1"
                app:layout_constraintRight_toRightOf="@+id/view_bg1"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_bill" />

            <TextView
                android:id="@+id/tv_mine_serve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_1"
                android:drawableLeft="@mipmap/icon_my_serve"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_16"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_16"
                android:text="@string/my_serve"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/view_bg1"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_bill" />

            <View
                android:id="@+id/view_bg2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginRight="@dimen/size_12"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_solid_white_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_bg1" />

            <TextView
                android:id="@+id/tv_mine_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_my_team"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/my_team"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toTopOf="@+id/view_bg2" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg2"
                app:layout_constraintRight_toRightOf="@+id/view_bg2"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_team" />

            <TextView
                android:id="@+id/tv_mine_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_recommend"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_16"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_16"
                android:text="@string/recommend"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_team" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg2"
                app:layout_constraintRight_toRightOf="@+id/view_bg2"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_recommend" />

            <TextView
                android:id="@+id/tv_mine_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_help"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/help_center"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_recommend" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg2"
                app:layout_constraintRight_toRightOf="@+id/view_bg2"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_help" />

            <TextView
                android:id="@+id/tv_mine_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_about_us"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/about_us"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_help" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_EFEFEF"
                app:layout_constraintLeft_toLeftOf="@+id/view_bg2"
                app:layout_constraintRight_toRightOf="@+id/view_bg2"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_about_us" />

            <TextView
                android:id="@+id/tv_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_setting"
                android:drawableRight="@drawable/icon_arrows"
                android:drawablePadding="@dimen/size_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_48"
                android:paddingTop="@dimen/size_12"
                android:paddingRight="@dimen/size_48"
                android:paddingBottom="@dimen/size_12"
                android:text="@string/setting_center"
                android:textColor="@color/light_black1"
                android:textSize="@dimen/font_14"
                app:layout_constraintBottom_toBottomOf="@+id/view_bg2"
                app:layout_constraintTop_toBottomOf="@+id/tv_mine_about_us" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</com.hdf.autotouch.widget.WindowInsetConstraintLayout>