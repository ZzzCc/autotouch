<?xml version="1.0" encoding="utf-8"?>
<com.hdf.autotouch.widget.WindowInsetConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFEF"
    tools:context=".ui.settingcenter.SettingCenterActivity">

    <include layout="@layout/include_top_bar" />

    <TextView
        android:id="@+id/tv_reset_pay_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_12"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/font_12"
        android:background="@drawable/bg_solid_white_4"
        android:drawableRight="@mipmap/icon_arrows"
        android:drawablePadding="@dimen/size_32"
        android:gravity="center_vertical"
        android:padding="@dimen/size_20"
        android:text="@string/reset_pay_password"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tv_reset_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_12"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginRight="@dimen/font_12"
        android:background="@drawable/bg_solid_white_4"
        android:drawableRight="@mipmap/icon_arrows"
        android:drawablePadding="@dimen/size_32"
        android:gravity="center_vertical"
        android:padding="@dimen/size_20"
        android:text="@string/reset_login_password"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toBottomOf="@+id/tv_reset_pay_password" />

    <TextView
        android:id="@+id/tv_exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:background="@drawable/bg_blue_rectangle24"
        android:gravity="center"
        android:paddingTop="@dimen/font_12"
        android:paddingBottom="@dimen/font_12"
        android:text="@string/exit_login"
        android:textColor="@color/app_color_1"
        android:textSize="@dimen/font_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</com.hdf.autotouch.widget.WindowInsetConstraintLayout>