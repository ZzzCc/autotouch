<?xml version="1.0" encoding="utf-8"?>
<com.hdf.autotouch.widget.WindowInsetConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFEF"
    tools:context=".ui.resetpaypassword.ResetPayPasswordActivity">

    <include layout="@layout/include_top_bar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12"
        android:paddingTop="@dimen/size_32"
        android:paddingRight="@dimen/size_12"
        android:paddingBottom="@dimen/size_32"
        android:background="@drawable/bg_solid_white_top_4"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/reset_pay_verify"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/font_18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/font_14"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_blue_stroke_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view_oval1"
            android:layout_width="@dimen/size_8"
            android:layout_height="0dp"
            android:background="@drawable/oval_app_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view1"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="@+id/view1"
            app:layout_constraintRight_toRightOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/view1" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_blue_stroke_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@+id/view1"
            app:layout_constraintRight_toLeftOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view_oval2"
            android:layout_width="@dimen/size_8"
            android:layout_height="0dp"
            android:background="@drawable/oval_app_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="@+id/view2"
            app:layout_constraintRight_toRightOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_blue_stroke_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@+id/view2"
            app:layout_constraintRight_toLeftOf="@+id/view4"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view_oval3"
            android:layout_width="@dimen/size_8"
            android:layout_height="0dp"
            android:background="@drawable/oval_app_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="@+id/view3"
            app:layout_constraintRight_toRightOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_blue_stroke_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@+id/view3"
            app:layout_constraintRight_toLeftOf="@+id/view5"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view_oval4"
            android:layout_width="@dimen/size_8"
            android:layout_height="0dp"
            android:background="@drawable/oval_app_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="@+id/view4"
            app:layout_constraintRight_toRightOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_blue_stroke_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@+id/view4"
            app:layout_constraintRight_toLeftOf="@+id/view6"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view_oval5"
            android:layout_width="@dimen/size_8"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40"
            android:background="@drawable/oval_app_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view5"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="@+id/view5"
            app:layout_constraintRight_toRightOf="@+id/view5"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/font_16"
            android:background="@drawable/bg_blue_stroke_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@+id/view5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <View
            android:id="@+id/view_oval6"
            android:layout_width="@dimen/size_8"
            android:layout_height="0dp"
            android:background="@drawable/oval_app_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view6"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="@+id/view6"
            app:layout_constraintRight_toRightOf="@+id/view6"
            app:layout_constraintTop_toTopOf="@+id/view6" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent" />


</com.hdf.autotouch.widget.WindowInsetConstraintLayout>