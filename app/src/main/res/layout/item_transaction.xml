<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_white_4"
    android:paddingLeft="@dimen/size_16"
    android:paddingTop="@dimen/size_8"
    android:paddingRight="@dimen/size_16"
    android:paddingBottom="@dimen/size_16">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充币"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:gravity="center"
        android:text="@string/quantity"
        android:textColor="@color/light_black3"
        android:textSize="@dimen/font_12"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_type" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status"
        android:textColor="@color/light_black3"
        android:textSize="@dimen/font_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_quantity"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@+id/tv_quantity"
        app:layout_constraintRight_toLeftOf="@+id/tv_time" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/time"
        android:textColor="@color/light_black3"
        android:textSize="@dimen/font_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_quantity"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toRightOf="@+id/tv_status"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_quantity_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:gravity="center"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_12"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_status_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity" />

    <TextView
        android:id="@+id/tv_status_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_quantity_value"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@+id/tv_quantity_value"
        app:layout_constraintRight_toLeftOf="@+id/tv_time_value" />

    <TextView
        android:id="@+id/tv_time_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_quantity_value"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toRightOf="@+id/tv_status_value"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>